{
	"compilerOptions": {
		"lib": [
			"ESNext"
		],
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "ESNext",
		"outDir": "dist",
		"sourceMap": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"resolveJsonModule": true,
	},
	"include": [
		"src",
		"src/events/.ts",
		"src/events/.ts"
	],
	"exclude": [
		"node_modules"
	]
}